using Gtk 4.0;
using Adw 1;

template $AureaWindow : Adw.ApplicationWindow {
  default-width: 1450;
  default-height: 600;
  width-request: 1450;
  height-request: 600;

  Adw.Breakpoint {
    condition ("max-width: 600sp")

    setters {
      content_view.halign: fill;
      screenshot_box.visible: false;
    }
  }


  content:
  Adw.ToolbarView {
    [top]
    Adw.HeaderBar header_bar {
      [start]
      Button open {
        Adw.ButtonContent {
          label: _("Open");
          icon-name: "folder-open-symbolic";
        }
        clicked => $open_file_dialog();
      }

      [title]
      CenterBox {
        [center]
        Adw.WindowTitle window_title {
          title: _("Banner Preview");
        }
      }

      [end]
      MenuButton {
        primary: true;
        icon-name: 'open-menu-symbolic';
        tooltip-text: _('Menu');
        menu-model: primary_menu;
      }
    }
    content:
    Adw.ToastOverlay toast_overlay {
      Stack stack {
        transition-type: crossfade;

        StackPage {
          name: "welcome_page";
          child: Adw.StatusPage status_page {
            title: _("Open a Metainfo File");
            icon-name: "folder-documents-symbolic";

            Button {
              label: _("Openâ€¦");
              halign: center;
              clicked => $open_file_dialog();

              styles [
                "pill",
                "suggested-action"
              ]
            }
          }

          ;
        }

        StackPage {
          name: "content_page";
          child: Adw.Clamp clamp {
            maximum-size: 1500;
            tightening-threshold: 1050;
            margin-bottom: 24;
            height-request: 470;
            halign: fill;
            valign: center;
            margin-start: 12;
            margin-end: 12;

            Box main_card {
              hexpand: true;
              vexpand: true;

              Overlay {
                halign: fill;
                valign: fill;
                hexpand: true;
                vexpand: true;

                Box {
                  Adw.Clamp content_view {
                    maximum-size: 500;
                    tightening-threshold: 600;
                    height-request: 318;
                    halign: start;
                    valign: fill;

                    Box {
                      halign: center;
                      valign: center;
                      orientation: vertical;

                        Image icon {
                          icon-name: "application-x-executable-symbolic";
                          icon-size: normal;
                          margin-bottom: 12;
                          halign: center;
                          valign: end;
                          pixel-size: 190;

                          styles [
                            "icon-dropshadow"
                          ]
                        }

                        Label title {
                          label: _("Application Name");

                          styles [
                            "title-1"
                          ]
                        }

                        Label description {
                          margin-top: 12;
                          label: _("A nice description for an app");

                          styles [
                            "title-4"
                          ]
                        }
                    }
                  }

                  Box screenshot_box{
                    halign: end;
                    orientation: vertical;
                    margin-end: 40;

                    Picture screenshot {
                      halign: start;
                      valign: end;
                      vexpand: true;
                      can-shrink: true;
                      // content-fit: scale_down;
                    }
                  }
                }


                [overlay]
                Button previous_button {
                  use-underline: true;
                  halign: start;
                  valign: center;
                  width-request: 64;
                  height-request: 64;
                  margin-top: 9;
                  margin-bottom: 9;
                  margin-start: 9;
                  margin-end: 9;
                  icon-name: 'go-previous-symbolic';
                  clicked => $cycle_color_scheme();

                  accessibility {
                    label: _('Previous');
                  }

                  styles [
                    "circular",
                    "flat",
                    "image-button",
                  ]
                }

                [overlay]
                Button next_button {
                  use-underline: true;
                  halign: end;
                  valign: center;
                  width-request: 64;
                  height-request: 64;
                  margin-top: 9;
                  margin-bottom: 9;
                  margin-start: 9;
                  margin-end: 9;
                  icon-name: 'go-next-symbolic';
                  clicked => $cycle_color_scheme();

                  accessibility {
                    label: _('Next');
                  }

                  styles [
                    "circular",
                    "flat",
                    "image-button",
                  ]
                }
              }

              styles [
                "card",
                "background-card",
              ]
            }
           }
          ;
        }
      }
    }
    ;
  }

  ;
}

menu primary_menu {
  section {
    item {
      label: _('_Keyboard Shortcuts');
      action: 'win.show-help-overlay';
    }

    item {
      label: _('_About Aurea');
      action: 'app.about';
    }
  }
}
